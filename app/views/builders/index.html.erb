<p id="notice"><%= notice %></p>

<div class ="jumbotron">
  <h2> HomeMakerBox is the best way to find reviews on local home service providers. </h2>
  <h3> Explore the best builders, cleaners, makers, and furnishers in your area. 
  <br> Leave reviews and ratings for your fellow homemakers. </h3>
</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <% if user_signed_in? && current_user.admin? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @builders.each do |builder| %>
      <tr>
        <td><%= link_to builder.name, builder , class: "btn btn-link" %></td>
        <td><%= builder.address %></td>
        <td><%= builder.phone %></td>
        <td><%= link_to builder.website, builder.website , class: "btn btn-link" %></td>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Edit', edit_builder_path(builder) , class: "btn btn-link" %></td>
          <td><%= link_to 'Destroy', builder, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @builders, renderer: BootstrapPagination::Rails %>

<% if user_signed_in? && current_user.admin? %>
  <%= link_to new_builder_path, class: "btn btn-default", data: { no_turbolink: true} do %>
    <i class="glyphicon glyphicon-plus"></i> New Builder
  <% end %>
  <%#= link_to 'New Builder', new_builder_path, class: "btn btn-default" %>
<% end %>

<br>

<div class="center">
  <div class="fb-like" data-href="https://homemakerbox2.herokuapp.com/" data-layout="button" data-action="like" data-show-faces="false" data-share="false"></div>
</div>

<br>
