<div class="row">
	<div class="col-md-3">
		<%= image_tag @builder.image_url %>

		<h2>
		  <%= @builder.name %>
		</h2>

		<div class="star-rating" data-score= <%= @avg_rating %> ></div>
		<p><%= "#{@reviews.length} reviews" %></p>

		<p>
		  <strong>Address:</strong>
		  <%= @builder.address %>
		</p>

		<p>
		  <strong>Phone:</strong>
		  <%= @builder.phone %>
		</p>

		<p>
		  <strong>Website:</strong>
		  <%= link_to @builder.website, @builder.website %>
		</p>

		<%= link_to "Write Review", new_builder_review_path(@builder), class: "btn btn-primary" %>

	<br>	
	<%= link_to 'Edit', edit_builder_path(@builder) , class: "btn btn-link"%> |
	<%= link_to 'Back', builders_path , class: "btn btn-link"%>

	</div>


		<div class="col-md-9">
			<% if @reviews.blank? %>
				<h3>No reviews yet. Be the first to write one!</h3>
			<% else %>
			<table class="table">
				<tbody>
					<% @reviews.each do |review| %>
						<tr>
							<td>
								<div class="star-rating" data-score= <%= review.rating %> ></div>
								<p><%= h(review.comment).gsub(/\n/, '<br/>').html_safe %></p>
							</td>
						<tr>
					<% end %>
		</tbody>
	</table>

			<% end %>
		</div>

</div>





<script>
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/homemakerbox2/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>


